<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/personal_recyclerView_item"
    android:layout_width="match_parent"
    android:layout_height="64dp">

    <ImageView
        android:id="@+id/personal_recyclerView_item_avatar"
        android:layout_width="63dp"
        android:layout_height="63dp"
        android:padding="5dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/personal_recyclerView_item"
        app:layout_constraintRight_toLeftOf="@+id/personal_recyclerView_item_address"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />
    <TextView
        android:id="@+id/personal_recyclerView_item_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shalu"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#555"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/personal_recyclerView_item_avatar" />
    <TextView
        android:id="@+id/personal_recyclerView_item_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hdhf sjhshjsdbfd fdkfdhjfd fdhjfdhdfh fdhjfd"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/personal_recyclerView_item_address"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@+id/personal_recyclerView_item_avatar"/>


</android.support.constraint.ConstraintLayout>