<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/personal_recyclerView_item"
    android:layout_width="match_parent"
    android:layout_height="64dp">

    <ImageView
        android:id="@+id/personal_recyclerView_item_avatar"
        android:layout_width="63dp"
        android:layout_height="63dp"
        android:padding="5dp"
        android:src="@drawable/ic_launcher_background"
        android:contentDescription="@string/app_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/personal_recyclerView_item"
        app:layout_constraintRight_toLeftOf="@+id/personal_recyclerView_item_address"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        />
    <TextView
        android:id="@+id/personal_recyclerView_item_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#555"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/personal_recyclerView_item_avatar" />
    <TextView
        android:id="@+id/personal_recyclerView_item_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="12sp"
        android:layout_marginBottom="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="74dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintLeft_toRightOf="@+id/personal_recyclerView_item_avatar"/>


</android.support.constraint.ConstraintLayout>