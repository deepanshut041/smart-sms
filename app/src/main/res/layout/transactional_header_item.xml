<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/transactional_header_item"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="8dp"
    android:paddingRight="10dp"
    android:layout_marginLeft="34dp"
    android:layout_marginRight="34dp"
    android:paddingLeft="10dp"
    android:background="@drawable/bg_shapes"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <TextView
            android:id="@+id/transactional_header_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:textSize="16sp"
            android:text="BANK"/>

        <TextView
            android:id="@+id/transactional_header_item_income"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/transactional_header_item_name"
            android:layout_marginTop="6dp"
            android:textSize="13sp"
            android:textColor="#FFFFFF"
            android:drawableLeft="@drawable/ic_up_arrow"
            android:text="Income\n$1000"/>

        <TextView
            android:id="@+id/transactional_header_item_expense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/transactional_header_item_name"
            android:layout_marginTop="6dp"
            android:textSize="13sp"
            android:textColor="#FFFFFF"
            android:layout_alignParentRight="true"
            android:drawableLeft="@drawable/ic_down_arrow"
            android:text="Expense\n$500"/>
    </RelativeLayout>